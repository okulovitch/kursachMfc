<Window x:Class="kursachMain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kursachMain"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF631717" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="207,90,184,90">

        <Border Background="#FF895541" BorderBrush="Gainsboro" BorderThickness="1" Margin="-34,0,0,-31">
            <StackPanel Margin="10">
                <Button Click="Button_Click">Просмотр практики</Button>
                <Button Margin="0,10">Студенты</Button>
                <Button >Преподаватели</Button>
                <Button Margin="0,10">Распределить на практику</Button>


            </StackPanel>

        </Border>

    </Grid>
</Window>
